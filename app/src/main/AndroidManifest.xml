<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="test.omegaware.syllego">

    <application
        android:name=".FirebasePersistenceHandler"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Launcher">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddBook"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".ViewBook"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".EditBook"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity android:name=".BookList" />
        <activity
            android:name=".CreateAccountActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".DataHistory"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".ViewProfile"
            android:theme="@style/Theme.AppCompat.Light" />

        <activity
            android:name=".ViewReports"
            android:theme="@style/Theme.AppCompat.Light"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />


    </application>



</manifest>