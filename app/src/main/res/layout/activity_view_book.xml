<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/holo_blue_bright"
    tools:context=".ViewBook">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/view_BookName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_bright"
            android:fontFamily="@font/exo_2_light"
            android:paddingTop="6dp"
            android:text="View Book"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="#ffffff"
            android:textSize="24dp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="27dp" />

        <TextView
            android:id="@+id/View_BookName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="#ad41beff"
            android:fontFamily="@font/exo_2_light"
            android:gravity="left|center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Book Name"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="#ffffff"
            android:textSize="32dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/View_BookAuthor"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_weight="0.28"
            android:background="#ad048dd5"
            android:fontFamily="@font/exo_2_light"
            android:gravity="left|center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Book Author"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="#ffffff"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/View_BookYearReleased"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="0.3"
            android:background="#bb13aeff"
            android:fontFamily="@font/exo_2_light"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Year Released"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="#ffffff"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/View_BookISBN"
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:layout_weight="0.2"
            android:background="#006080"
            android:fontFamily="@font/exo_2_light"
            android:gravity="left|center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="ISBN"
            android:textAlignment="textStart"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:onClick="setIsbnToClipboard"/>

    </LinearLayout>

</LinearLayout>